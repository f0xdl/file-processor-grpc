    "version": "0.2.0",
    "configurations": [
        {
            "name": "local: client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/client",
            "envFile": "${workspaceFolder}/deploy/.env.dev",
 },
        {
            "name": "local: service",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/file-service",
            "envFile": "${workspaceFolder}/deploy/.env.dev",
        },

        {
            "name": "docker: file-server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40001,
            "host": "127.0.0.1",
        },
        {
            "name": "docker: client",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "port": 40002,
            "host": "127.0.0.1"
        },
    ]
}